@model IEnumerable<OurNewProject.Models.Branch>

@{
    ViewData["Title"] = "Index";
}



<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bona+Nova:ital@1&display=swap" rel="stylesheet">

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">





<html>
<body>

    <!-- Grid -->
    <div class="text-center">
    <img src ="https://scontent.ftlv5-1.fna.fbcdn.net/v/t1.6435-9/235260084_107783014950286_4037703559554965442_n.jpg?_nc_cat=106&ccb=1-5&_nc_sid=0debeb&_nc_ohc=lTNjmh8rpL0AX9HtNOa&_nc_ht=scontent.ftlv5-1.fna&oh=6e1ec47d5439e0b09207dd28c12d48bf&oe=616DD1B8" style="width:491px; height:500px">
    <div class="w3-row-padding" style="font-family: 'Bona Nova', serif;" id="plans">
        <div class="w3-center w3-padding-16">
            <h1 style="font-family: 'Bona Nova', serif;color: #090e46">הסניפים שלנו מחכים לכם !</h1>
        </div>
    </div>



        @foreach (var item in Model)
        {
            <div class="w3-third w3-margin-bottom">
                <ul class="w3-ul w3-border w3-center w3-hover-shadow">
                    <li class="w3-jumbo text-white w3-xlarge w3-padding-32" style="background-color: #d6d6a2; padding: 0;">@Html.DisplayFor(modelItem => item.Name)</li>
                    <li class="w3-padding-16"><b> @item.Phone</b></li>
                    <li class="w3-padding-16"><b>  @item.Hours</b></li>
                    <li class="w3-padding-16"><b>@item.Address</b> </li>


                    <li class="w3-light-grey w3-padding-24">
                        <button onclick="document.getElementById('id01').style.display='block'" class="w3-button text-white" style="background-color: #090e46">אודות הסניף</button>
                    </li>
                </ul>
            </div>
        }






        <div class="w3-container">

            <div id="id01" class="w3-modal">
                <div class="w3-modal-content w3-card-4">
                    <header class="w3-container" style="background-color: #090e46">
                        <span onclick="document.getElementById('id01').style.display='none'"
                              class="w3-button w3-display-topright">&times;</span>
                        <h2 class="text-center " style="color: #d6d6a2"> אודות הסניף</h2>
                    </header>
                    <div class="w3-container">
                        <p class="text-center" style="color: #090e46"> ישיבה בחוץ - קיימת</p>
                        <p class="text-center" style="color: #090e46">כשרות - כשר למהדרין </p>
                        <p class="text-center" style="color: #090e46"> הגשה לשולחן - קיימת </p>
                    </div>
                    <footer class="w3-container" style=" background-color: #090e46">
                        <p class="text-center" style="color: #d6d6a2">נשמח לראותכם</p>
                    </footer>
                </div>
            </div>
        </div>




    </div>


</body>
</html>
